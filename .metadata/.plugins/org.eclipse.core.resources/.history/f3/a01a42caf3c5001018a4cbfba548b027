spring.application.name=webflux-demo

# R2DBC connection string (reactive)
spring.r2dbc.url=r2dbc:postgresql://localhost:5432/webfluxdb
spring.r2dbc.username=your_username
spring.r2dbc.password=your_password

# Optional: Name of the DB schema
spring.r2dbc.properties.schema=public

# Enable SQL logging (optional, good for learning)
logging.level.org.springframework.r2dbc.core=DEBUG
logging.level.org.springframework.data.r2dbc=DEBUG